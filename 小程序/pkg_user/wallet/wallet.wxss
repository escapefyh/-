/* pkg_user/wallet/wallet.wxss */
.wallet-page {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 30rpx;
}

/* 余额显示区域 */
.balance-section {
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  text-align: center;
}

.balance-label {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.balance-amount {
  display: flex;
  align-items: baseline;
  justify-content: center;
}

.balance-symbol {
  font-size: 48rpx;
  color: #333;
  font-weight: 500;
  margin-right: 8rpx;
}

.balance-value {
  font-size: 72rpx;
  color: #333;
  font-weight: 600;
  line-height: 1;
}

/* 充值按钮区域 */
.recharge-section {
  margin-bottom: 40rpx;
}

.recharge-btn {
  width: 100%;
  height: 96rpx;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 500;
}

/* 提示区域 */
.tips-section {
  text-align: center;
  padding: 20rpx 0;
}

.tips-text {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 充值弹窗 */
.recharge-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: flex-end;
  justify-content: center;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: opacity 0.3s, visibility 0.3s;
}

.recharge-modal.show {
  opacity: 1;
  visibility: visible;
}

.recharge-modal-content {
  width: 100%;
  max-height: 80vh;
  background-color: #ffffff;
  border-radius: 32rpx 32rpx 0 0;
  display: flex;
  flex-direction: column;
  transform: translateY(100%);
  transition: transform 0.3s;
}

.recharge-modal.show .recharge-modal-content {
  transform: translateY(0);
}

/* 弹窗头部 */
.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 30rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.modal-close {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  color: #999;
  line-height: 1;
}

.modal-close:active {
  color: #666;
}

/* 弹窗内容 */
.modal-body {
  flex: 1;
  overflow-y: auto;
  padding: 40rpx 30rpx;
}

/* 金额选择区域 */
.amount-section {
  margin-bottom: 50rpx;
}

.section-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 24rpx;
  font-weight: 500;
}

.amount-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.amount-item {
  flex: 0 0 calc(33.333% - 14rpx);
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f5f5f5;
  border: 2rpx solid #e5e5e5;
  border-radius: 12rpx;
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  transition: all 0.3s;
}

.amount-item:active {
  background-color: #e5e5e5;
}

.amount-item-active {
  background-color: #1296db;
  border-color: #1296db;
  color: #ffffff;
}

.amount-item-active:active {
  background-color: #0d7bb8;
}

/* 自定义金额区域 */
.custom-section {
  margin-bottom: 20rpx;
}

.custom-input-wrapper {
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border: 2rpx solid #e5e5e5;
  border-radius: 12rpx;
  padding: 0 24rpx;
  height: 100rpx;
  margin-bottom: 16rpx;
}

.custom-input-wrapper:focus-within {
  border-color: #1296db;
  background-color: #ffffff;
}

.custom-symbol {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-right: 12rpx;
}

.custom-input {
  flex: 1;
  font-size: 32rpx;
  color: #333;
  height: 100%;
}

.custom-tip {
  font-size: 24rpx;
  color: #999;
  padding-left: 4rpx;
}

/* 弹窗底部 */
.modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  border-top: 1rpx solid #f0f0f0;
  background-color: #ffffff;
}

.modal-btn-cancel,
.modal-btn-confirm {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
}



