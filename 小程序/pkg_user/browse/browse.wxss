/* pkg_user/browse/browse.wxss */

.browse-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 120rpx;
}

.loading-container,
.empty-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 60vh;
  font-size: 32rpx;
  color: #999;
}

.browse-list {
  padding: 20rpx;
}

.browse-item {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  position: relative;
}

.goods-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
  background-color: #f0f0f0;
}

.goods-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  min-width: 0;
}

.goods-description {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.goods-meta {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.goods-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff4444;
}

.browse-time {
  font-size: 24rpx;
  color: #999;
}

.delete-btn {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(0, 0, 0, 0.3);
  border-radius: 50%;
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
}

.delete-btn:active {
  background-color: rgba(0, 0, 0, 0.5);
}

.clear-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background-color: #fff;
  border-top: 1rpx solid #f0f0f0;
}

.clear-btn {
  width: 100%;
  padding: 24rpx;
  background-color: #fff;
  border: 1rpx solid #ddd;
  border-radius: 12rpx;
  text-align: center;
  font-size: 28rpx;
  color: #666;
}

.clear-btn:active {
  background-color: #f5f5f5;
}
















