<!--pages/addressedit/addressedit.wxml-->
<view class="address-edit-page">
  <view class="form-container">
    <!-- 地址信息标题 -->
    <view class="form-section">
      <view class="section-header">
        <text class="section-title">地址信息</text>
        <view class="default-option">
          <text class="default-label">默认收货地址</text>
          <switch 
            checked="{{isDefault}}" 
            bindchange="onDefaultChange"
            color="#ffa500"
          />
        </view>
      </view>
    </view>

    <!-- 联系人 -->
    <view class="form-item">
      <view class="form-label">
        <text>联系人*</text>
      </view>
      <input 
        class="form-input"
        type="text"
        placeholder="名字"
        value="{{contactName}}"
        bindinput="onContactNameInput"
        maxlength="20"
      />
    </view>

    <!-- 手机号 -->
    <view class="form-item">
      <view class="form-label">
        <text>手机号*</text>
      </view>
      <view class="phone-input-wrapper">
        <view class="country-code">+86</view>
        <input 
          class="form-input phone-input"
          type="number"
          placeholder="手机号"
          value="{{phone}}"
          bindinput="onPhoneInput"
          maxlength="11"
        />
      </view>
    </view>

    <!-- 所在地区 -->
    <view class="form-item">
      <view class="form-label">
        <text>所在地区*</text>
      </view>
      <picker 
        mode="region"
        value="{{regionArray}}"
        bindchange="onRegionChange"
      >
        <view class="region-input-wrapper">
          <text class="region-text {{!region ? 'placeholder' : ''}}">{{region || '省、市、区、街道'}}</text>
          <text class="region-arrow">></text>
        </view>
      </picker>
    </view>

    <!-- 详细地址 -->
    <view class="form-item">
      <view class="form-label">
        <text>详细地址*</text>
      </view>
      <input 
        class="form-input"
        type="text"
        placeholder="小区、写字楼、门牌号等"
        value="{{detailAddress}}"
        bindinput="onDetailAddressInput"
        maxlength="100"
      />
    </view>
  </view>

  <!-- 保存按钮 -->
  <view class="save-button" bindtap="onSave">
    <text>保存</text>
  </view>
</view>
















