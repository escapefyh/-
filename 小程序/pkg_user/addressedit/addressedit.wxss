/* pages/addressedit/addressedit.wxss */
.address-edit-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 140rpx;
}

.form-container {
  background-color: #fff;
  margin-top: 20rpx;
}

.form-section {
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.default-option {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.default-label {
  font-size: 28rpx;
  color: #666;
}

.form-item {
  display: flex;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
  min-height: 100rpx;
}

.form-item:last-child {
  border-bottom: none;
}

.form-label {
  min-width: 160rpx;
  font-size: 32rpx;
  color: #333;
}

.form-input {
  flex: 1;
  font-size: 32rpx;
  color: #333;
}

.phone-input-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.country-code {
  font-size: 32rpx;
  color: #333;
  padding: 0 16rpx;
  border-right: 1rpx solid #e0e0e0;
}

.phone-input {
  flex: 1;
}

.region-input-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.region-text {
  flex: 1;
  font-size: 32rpx;
  color: #333;
}

.region-text.placeholder {
  color: #999;
}

.region-arrow {
  font-size: 32rpx;
  color: #999;
  margin-left: 16rpx;
}

/* 保存按钮 */
.save-button {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-weight: bold;
  color: #000;
  padding-bottom: env(safe-area-inset-bottom);
}

.save-button:active {
  opacity: 0.8;
}
































