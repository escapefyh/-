/* pages/addresslist/addresslist.wxss */
.address-list-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 140rpx;
}

/* 地址列表 */
.address-list {
  padding: 20rpx;
}

.address-item {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.address-item.default {
  border: 2rpx solid #ffa500;
}

.address-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.address-user-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.address-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #ffa500 0%, #ff8c00 100%);
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
  margin-right: 20rpx;
}

.address-user {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex-wrap: wrap;
}

.address-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.address-phone {
  font-size: 28rpx;
  color: #666;
}

.default-badge {
  background-color: #fff4e6;
  border: 1rpx solid #ffa500;
  border-radius: 8rpx;
  padding: 4rpx 12rpx;
}

.default-badge text {
  font-size: 22rpx;
  color: #ff6600;
}

.address-actions {
  display: flex;
  align-items: center;
}

.address-edit-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.edit-icon {
  font-size: 36rpx;
  color: #999;
}

.address-delete-btn {
  padding: 12rpx 24rpx;
  background-color: #ff4444;
  color: #fff;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.address-delete-btn:active {
  opacity: 0.7;
}

.address-item.manage-mode {
  border: 2rpx solid #ffa500;
}

.address-content {
  margin-top: 16rpx;
}

.address-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 空状态 */
.empty-state {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 60vh;
  font-size: 32rpx;
  color: #999;
}

/* 底部操作栏 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  gap: 20rpx;
  padding: 20rpx;
  background-color: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
}

.action-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 500;
}

.manage-btn {
  background-color: #fff;
  color: #333;
  border: 2rpx solid #e0e0e0;
}

.manage-btn:active {
  background-color: #f5f5f5;
}

.add-btn {
  background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
  color: #000;
}

.add-btn:active {
  opacity: 0.8;
}


















