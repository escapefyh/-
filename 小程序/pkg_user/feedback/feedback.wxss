.page {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 24rpx;
  box-sizing: border-box;
}

.section {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.textarea {
  width: 100%;
  min-height: 200rpx;
  border-radius: 12rpx;
  background: #f7f7f7;
  padding: 16rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.word-count {
  text-align: right;
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #999;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.image-item {
  position: relative;
  width: 180rpx;
  height: 180rpx;
  border-radius: 12rpx;
  overflow: hidden;
  background: #f0f0f0;
}

.image {
  width: 100%;
  height: 100%;
}

.delete {
  position: absolute;
  top: 4rpx;
  right: 4rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
  background: rgba(0, 0, 0, 0.6);
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}

.image-item.add {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 1rpx dashed #ccc;
  background: #fafafa;
  color: #999;
}

.add-icon {
  font-size: 40rpx;
  margin-bottom: 6rpx;
}

.add-text {
  font-size: 24rpx;
}

.bottom {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 16rpx 24rpx;
  background: #f5f5f5;
  box-shadow: 0 -2rpx 8rpx rgba(0,0,0,0.05);
}

.submit-btn {
  width: 100%;
  background: #409eff;
  color: #fff;
  border-radius: 999rpx;
}




