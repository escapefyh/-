<!--pages/forgotpassword/forgotpassword.wxml-->
<view class="forgot-password-page">
  <view class="container">
    <view class="form-section">
      <!-- 手机号输入 -->
      <view class="input-group">
        <view class="label">手机号</view>
        <t-input 
          type="number" 
          placeholder="请输入注册时填写的手机号" 
          value="{{phone}}" 
          bind:change="onPhoneChange"
          maxlength="11"
          confirmType="next"
        />
      </view>

      <!-- 新密码输入 -->
      <view class="input-group">
        <view class="label">新密码</view>
        <t-input 
          type="password" 
          placeholder="请输入新密码（6-20个字符）" 
          value="{{newPassword}}" 
          bind:change="onNewPasswordChange"
          confirmType="next"
        />
      </view>

      <!-- 确认新密码输入 -->
      <view class="input-group">
        <view class="label">确认新密码</view>
        <t-input 
          type="password" 
          placeholder="请再次输入新密码" 
          value="{{confirmPassword}}" 
          bind:change="onConfirmPasswordChange"
          confirmType="done"
          bind:enter="onSubmit"
        />
      </view>
    </view>

    <view class="button-section">
      <t-button theme="primary" size="large" bind:tap="onSubmit">确认修改</t-button>
    </view>
  </view>
</view>




