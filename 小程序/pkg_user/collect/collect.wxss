/* pages/collect/collect.wxss */

.collect-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
}

.loading-container,
.empty-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 60vh;
  font-size: 32rpx;
  color: #999;
}

.goods-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding-bottom: 40rpx;
}

.goods-item {
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  display: flex;
  flex-direction: column;
}

.goods-image-wrapper {
  position: relative;
  width: 100%;
  padding-top: 100%;
  overflow: hidden;
  background-color: #f0f0f0;
}

.goods-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.group-buy-badge {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  background-color: #ffeb3b;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  font-size: 20rpx;
  color: #333;
  font-weight: 500;
}

.goods-info {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.goods-description {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  min-height: 84rpx;
}

.goods-price {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff4444;
  margin-top: 4rpx;
}

.goods-seller {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 4rpx;
}

.seller-name {
  font-size: 24rpx;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  flex: 1;
}

.sales-count {
  font-size: 24rpx;
  color: #ff6600;
  font-weight: 500;
  margin-left: 10rpx;
}










