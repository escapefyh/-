<!--pages/changepassword/changepassword.wxml-->
<view class="changepassword-page">
  <view class="container">
    <view class="form-section">
      <view class="input-group">
        <view class="label">原密码</view>
        <t-input 
          type="password" 
          placeholder="请输入原密码" 
          value="{{oldPassword}}" 
          bind:change="onOldPasswordChange"
          confirmType="next"
        />
      </view>
      
      <view class="input-group">
        <view class="label">新密码</view>
        <t-input 
          type="password" 
          placeholder="请输入新密码（6-20个字符）" 
          value="{{newPassword}}" 
          bind:change="onNewPasswordChange"
          confirmType="next"
        />
      </view>
      
      <view class="input-group">
        <view class="label">确认新密码</view>
        <t-input 
          type="password" 
          placeholder="请再次输入新密码" 
          value="{{confirmPassword}}" 
          bind:change="onConfirmPasswordChange"
          confirmType="done"
          bind:enter="onSubmit"
        />
      </view>
    </view>

    <view class="button-section">
      <t-button theme="primary" size="large" bind:tap="onSubmit">确认修改</t-button>
    </view>
  </view>
</view>














