/* pages/about/about.wxss */
.about-page {
  min-height: 100vh;
  background-color: #f5f5f5;
}

.container {
  padding: 40rpx 32rpx;
}

/* 应用信息 */
.app-info {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  margin-bottom: 30rpx;
}

.app-logo {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.app-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.app-version {
  font-size: 28rpx;
  color: #999;
}

/* 内容区域 */
.content-section {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 30rpx;
}

.content-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.content-text {
  font-size: 30rpx;
  color: #666;
  line-height: 1.8;
  white-space: pre-wrap;
  word-break: break-all;
}

/* 联系方式 */
.contact-section {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 30rpx;
}

.contact-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 20rpx;
  font-size: 30rpx;
  line-height: 1.6;
}

.contact-item:last-child {
  margin-bottom: 0;
}

.contact-label {
  color: #333;
  font-weight: 500;
  min-width: 120rpx;
}

.contact-value {
  color: #666;
  flex: 1;
}

/* 版权信息 */
.copyright-section {
  text-align: center;
  padding: 40rpx 0;
}

.copyright-text {
  font-size: 24rpx;
  color: #999;
}







