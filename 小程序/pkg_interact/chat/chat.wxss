/* pages/chat/chat.wxss */
.chat-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 120rpx;
}

/* 商品信息卡片 */
.goods-card {
  position: sticky;
  top: 0;
  z-index: 10;
  display: flex;
  background-color: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  cursor: pointer;
  transition: background-color 0.2s;
}

.goods-card:active {
  background-color: #f5f5f5;
}

.goods-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  background-color: #f0f0f0;
}

.goods-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goods-description {
  font-size: 28rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 10rpx;
}

.goods-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff4444;
}

/* 消息列表 */
.chat-messages {
  padding: 20rpx;
}

.loading-container,
.empty-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 60vh;
  font-size: 28rpx;
  color: #999;
}

.message-list {
  display: flex;
  flex-direction: column;
}

/* 消息项 */
.message-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 30rpx;
}

.message-mine {
  flex-direction: row-reverse;
}

.message-other {
  flex-direction: row;
}

/* 头像 */
.message-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin: 0 20rpx;
  background-color: #f0f0f0;
}

/* 消息内容 */
.message-content {
  max-width: 60%;
  display: flex;
  flex-direction: column;
}

.message-mine .message-content {
  align-items: flex-end;
}

.message-other .message-content {
  align-items: flex-start;
}

/* 消息气泡 */
.message-bubble {
  padding: 20rpx 24rpx;
  border-radius: 16rpx;
  background-color: #fff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.message-mine .message-bubble {
  background-color: #0052d9;
}

.message-other .message-bubble {
  background-color: #fff;
}

.message-text {
  font-size: 28rpx;
  line-height: 1.5;
  word-break: break-word;
}

.message-mine .message-text {
  color: #fff;
}

.message-other .message-text {
  color: #333;
}

/* 消息时间 */
.message-time {
  font-size: 22rpx;
  color: #999;
  margin-top: 8rpx;
  padding: 0 10rpx;
}

/* 输入框区域 */
.chat-input-area {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 20rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.chat-input {
  flex: 1;
  height: 80rpx;
  background-color: #f5f5f5;
  border-radius: 40rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
}

.send-button {
  padding: 0 30rpx;
  height: 80rpx;
  background-color: #0052d9;
  color: #fff;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 500;
  min-width: 120rpx;
}

.send-button:active {
  opacity: 0.8;
}




