/* pages/goodsdetail/goodsdetail.wxss */
.goods-detail-page {
  min-height: 100vh;
  background-color: #f5f5f5;
}

.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  font-size: 32rpx;
  color: #999;
}

.content {
  padding-bottom: 140rpx; /* 为底部购买按钮留出空间 */
}

/* 卖家信息区域 */
/* 卖家信息区域 */
.seller-section {
  background-color: #fff;
  margin-bottom: 20rpx;
}

.seller-header {
  padding: 30rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.seller-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  flex-shrink: 0;
}

.seller-name {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  flex: 1;
}

/* 关注按钮 */
.follow-btn-wrapper {
  flex-shrink: 0;
}

.follow-btn {
  padding: 12rpx 24rpx;
  border: 1rpx solid #1296db;
  border-radius: 8rpx;
  background-color: #fff;
  font-size: 26rpx;
  color: #1296db;
  white-space: nowrap;
}

.follow-btn.followed {
  background-color: #f5f5f5;
  border-color: #ddd;
  color: #999;
}

.follow-btn-text {
  font-size: 26rpx;
}

.image-section {
  background-color: #fff;
  margin-bottom: 20rpx;
}

.goods-info {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.price-section {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.price {
  font-size: 48rpx;
  font-weight: bold;
  color: #ff4444;
  margin-right: 20rpx;
}

/* 拼团信息区域 */
.group-buy-info-section {
  background-color: #fff;
  margin-bottom: 20rpx;
  padding: 30rpx;
}

.group-buy-info-header {
  margin-bottom: 20rpx;
}

.group-buy-info-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.group-buy-info-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.group-buy-status {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.group-buy-status-text {
  font-size: 28rpx;
  color: #333;
}

.group-buy-count-text {
  font-size: 28rpx;
  color: #1296db;
  font-weight: 500;
}

.group-buy-remaining {
  padding: 12rpx 0;
}

.group-buy-remaining-text {
  font-size: 26rpx;
  color: #ff4444;
}

.group-buy-timer {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding-top: 8rpx;
  border-top: 1rpx solid #f0f0f0;
}

.timer-label {
  font-size: 24rpx;
  color: #999;
}

.timer-value {
  font-size: 24rpx;
  color: #ff4444;
  font-weight: 500;
}

.group-buy-info-empty {
  padding: 40rpx 0;
  text-align: center;
}

.group-buy-empty-text {
  font-size: 28rpx;
  color: #999;
}

.group-buy-tag {
  background-color: #ffeb3b;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #333;
}

.description {
  font-size: 32rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 20rpx;
}

.meta-info {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  font-size: 28rpx;
  color: #999;
}

.meta-item {
  display: flex;
  align-items: center;
}

.meta-info .label {
  margin-right: 10rpx;
}

.sales-value {
  color: #ff6600;
  font-weight: 500;
}


/* 底部操作栏 */
.bottom-action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
  border-top: 1rpx solid #f0f0f0;
}

/* 功能图标区域 */
.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100rpx;
  padding: 0 15rpx;
  position: relative;
}

.action-item:not(:last-child)::after {
  content: '';
  position: absolute;
  right: 0;
  top: 20%;
  bottom: 20%;
  width: 1rpx;
  background-color: #f0f0f0;
}

.action-icon {
  width: 48rpx;
  height: 48rpx;
}

.action-count {
  font-size: 20rpx;
  color: #999;
  margin-top: 4rpx;
}

/* 聊一聊按钮 */
.chat-btn {
  padding: 20rpx 30rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  margin: 0 15rpx;
  flex-shrink: 0;
}

.chat-text {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

/* 购买按钮区域 */
.buy-buttons {
  flex: 1;
  display: flex;
  align-items: stretch;
  gap: 10rpx;
  padding: 0 10rpx;
}

.buy-buttons-group {
  flex: 1;
  display: flex;
  align-items: stretch;
  gap: 10rpx;
}

.buy-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 16rpx 8rpx;
  border-radius: 8rpx;
  min-width: 0;
}

.buy-btn.gray-btn {
  background-color: #f5f5f5;
  color: #333;
}

.buy-btn.yellow-btn {
  background-color: #ffd700;
  color: #000;
}

.buy-price {
  font-size: 26rpx;
  font-weight: bold;
  line-height: 1.2;
}

.buy-label {
  font-size: 22rpx;
  margin-top: 4rpx;
}

/* 购买弹窗样式 */
.buy-modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: flex-end;
}

.buy-modal-content {
  width: 100%;
  max-height: 80vh;
  background-color: #fff;
  border-radius: 30rpx 30rpx 0 0;
  display: flex;
  flex-direction: column;
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.buy-modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.buy-modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.buy-modal-close {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  color: #999;
}

.buy-modal-section {
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

/* 用户信息和地址 */
.user-info-row {
  margin-bottom: 20rpx;
}

.user-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.address-row {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
}

.address-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.address-text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.address-placeholder {
  color: #999;
}

.address-arrow {
  font-size: 28rpx;
  color: #999;
  margin-left: 10rpx;
}

/* 商品信息 */
.goods-info-row {
  display: flex;
  gap: 20rpx;
}

.goods-thumb {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
}

.goods-info-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goods-name {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.goods-price-row {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-top: 20rpx;
}

.goods-price {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff4444;
}

.goods-original-price {
  font-size: 28rpx;
  color: #999;
  text-decoration: line-through;
}

/* 规格选择 */
.spec-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.spec-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.spec-item {
  padding: 20rpx 30rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  min-width: 150rpx;
}

.spec-item-active {
  border-color: #ff4444;
  background-color: #fff5f5;
}

.spec-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.spec-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff4444;
  margin-bottom: 8rpx;
}

.spec-stock {
  font-size: 24rpx;
  color: #999;
}

/* 数量选择 */
.quantity-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.quantity-label {
  font-size: 28rpx;
  color: #666;
}

.quantity-control {
  display: flex;
  align-items: center;
  gap: 30rpx;
}

.quantity-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 36rpx;
  color: #333;
  background-color: #fff;
}

.quantity-value {
  font-size: 32rpx;
  color: #333;
  min-width: 60rpx;
  text-align: center;
}

/* 底部购买按钮 */
.buy-modal-footer {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background-color: #fff;
  border-top: 1rpx solid #f0f0f0;
  gap: 20rpx;
}

.price-summary {
  flex: 1;
  display: flex;
  align-items: baseline;
  gap: 10rpx;
}

.total-label {
  font-size: 28rpx;
  color: #666;
}

.total-price {
  font-size: 40rpx;
  font-weight: bold;
  color: #ff4444;
}

.confirm-btn {
  padding: 24rpx 60rpx;
  background-color: #ff4444;
  border-radius: 50rpx;
  flex-shrink: 0;
}

.confirm-btn-text {
  font-size: 32rpx;
  color: #fff;
  font-weight: bold;
}

/* 支付弹窗 */
.pay-modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: flex-end;
  justify-content: center;
  z-index: 2000;
}

.pay-modal-content {
  width: 100%;
  max-height: 70vh;
  background-color: #ffffff;
  border-radius: 32rpx 32rpx 0 0;
  display: flex;
  flex-direction: column;
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.pay-modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 30rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.pay-modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.pay-modal-close {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  color: #999;
  line-height: 1;
}

.pay-modal-close:active {
  color: #666;
}

.pay-modal-body {
  flex: 1;
  overflow-y: auto;
  padding: 40rpx 30rpx;
}

/* 支付方式 */
.pay-method-section {
  margin-bottom: 40rpx;
}

.pay-method-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background-color: #f5f5f5;
  border: 2rpx solid #e0e0e0;
  border-radius: 16rpx;
  position: relative;
}

.pay-method-active {
  background-color: #e8f5e9;
  border-color: #4caf50;
}

.pay-method-icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}

.pay-method-name {
  flex: 1;
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.pay-method-check {
  font-size: 32rpx;
  color: #4caf50;
  font-weight: bold;
}

/* 支付金额 */
.pay-amount-section {
  text-align: center;
  padding: 40rpx 0;
  margin-bottom: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.pay-amount-label {
  display: block;
  font-size: 28rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.pay-amount-value {
  font-size: 64rpx;
  font-weight: bold;
  color: #ff4444;
}

/* 余额信息 */
.balance-info-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  font-size: 28rpx;
}

.balance-label {
  color: #666;
}

.balance-value {
  color: #333;
  font-weight: 500;
}

/* 余额不足提示 */
.balance-warning {
  margin-top: 20rpx;
  padding: 20rpx;
  background-color: #fff3cd;
  border-radius: 12rpx;
  text-align: center;
  font-size: 26rpx;
  color: #856404;
}

/* 支付弹窗底部 */
.pay-modal-footer {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background-color: #fff;
  border-top: 1rpx solid #f0f0f0;
  gap: 20rpx;
}

.pay-total {
  flex: 1;
  display: flex;
  align-items: baseline;
  gap: 10rpx;
}

.pay-total-label {
  font-size: 28rpx;
  color: #666;
}

.pay-total-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #ff4444;
}

.pay-confirm-btn {
  padding: 24rpx 60rpx;
  background-color: #07c160;
  border-radius: 50rpx;
  flex-shrink: 0;
}

.pay-confirm-btn-disabled {
  background-color: #ccc;
}

.pay-confirm-btn-text {
  font-size: 32rpx;
  color: #fff;
  font-weight: bold;
}

/* 管理按钮样式 */
.manage-btn-wrapper {
  flex: 1;
  display: flex;
  align-items: stretch;
  padding: 0 10rpx;
}

.manage-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 16rpx 8rpx;
  border-radius: 8rpx;
  background-color: #1296db;
  color: #fff;
  min-width: 0;
}

.manage-btn .buy-label {
  color: #fff;
  font-weight: bold;
}

/* 管理弹窗样式 */
.manage-modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.manage-modal-content {
  width: 90%;
  max-width: 600rpx;
  max-height: 80vh;
  background-color: #fff;
  border-radius: 24rpx;
  display: flex;
  flex-direction: column;
  animation: modalFadeIn 0.3s ease-out;
  overflow: hidden;
}

@keyframes modalFadeIn {
  from {
    opacity: 0;
    transform: scale(0.9);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

.manage-modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.manage-modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.manage-modal-close {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  color: #999;
}

.manage-modal-body {
  padding: 30rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.manage-tip {
  padding: 20rpx;
  background-color: #fff7e6;
  border-radius: 8rpx;
  margin-bottom: 30rpx;
  border-left: 4rpx solid #ff9800;
}

.manage-tip text {
  font-size: 26rpx;
  color: #ff9800;
  line-height: 1.6;
}

.manage-form-item {
  margin-bottom: 30rpx;
  display: flex;
  align-items: flex-start;
  flex-direction: column;
}

.manage-form-item:last-child {
  margin-bottom: 0;
}

.manage-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
  width: 100%;
}

.manage-textarea {
  width: 100%;
  min-height: 120rpx;
  padding: 20rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
  background-color: #fafafa;
  box-sizing: border-box;
  line-height: 1.6;
}

.manage-textarea:focus {
  border-color: #1296db;
  background-color: #fff;
}

.manage-form-item.price-item {
  flex-direction: row;
  align-items: center;
}

.manage-form-item.price-item .manage-label {
  width: auto;
  margin-bottom: 0;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.manage-input {
  flex: 1;
  height: 80rpx;
  padding: 0 20rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
  background-color: #fafafa;
  box-sizing: border-box;
}

.manage-input:focus {
  border-color: #1296db;
  background-color: #fff;
}

.manage-unit {
  font-size: 28rpx;
  color: #666;
  flex-shrink: 0;
  margin-left: 16rpx;
}

.manage-modal-footer {
  display: flex;
  border-top: 1rpx solid #f0f0f0;
}

.manage-btn-cancel,
.manage-btn-confirm {
  flex: 1;
  padding: 30rpx;
  text-align: center;
  font-size: 32rpx;
}

.manage-btn-cancel {
  color: #666;
  border-right: 1rpx solid #f0f0f0;
}

.manage-btn-confirm {
  color: #1296db;
  font-weight: bold;
}

/* 评论区 */
.comment-section {
  background-color: #fff;
  margin-bottom: 20rpx;
  padding: 30rpx;
}

.comment-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.comment-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.comment-tip {
  padding: 8rpx 20rpx;
  background-color: #1296db;
  border-radius: 20rpx;
}

.comment-tip-text {
  font-size: 24rpx;
  color: #fff;
}

.comment-reminder {
  background-color: #fff7e6;
  border: 1rpx solid #ffd591;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.reminder-text {
  font-size: 28rpx;
  color: #d46b08;
  flex: 1;
}

.reminder-btn {
  padding: 12rpx 24rpx;
  background-color: #1296db;
  border-radius: 8rpx;
  margin-left: 20rpx;
}

.reminder-btn text {
  font-size: 26rpx;
  color: #fff;
}

.comment-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.comment-item {
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.comment-item:last-child {
  border-bottom: none;
}

.comment-user-info {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.comment-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.comment-user-detail {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.comment-user-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.comment-time {
  font-size: 24rpx;
  color: #999;
}

.comment-rating {
  display: flex;
  gap: 4rpx;
}

.star {
  font-size: 28rpx;
  color: #ddd;
}

