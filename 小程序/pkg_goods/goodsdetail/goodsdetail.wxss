/* pages/goodsdetail/goodsdetail.wxss */
.goods-detail-page {
  min-height: 100vh;
  background-color: #f5f5f5;
}

.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  font-size: 32rpx;
  color: #999;
}

.content {
  padding-bottom: 140rpx; /* 为底部购买按钮留出空间 */
}

/* 卖家信息头部 */
.seller-header {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.seller-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  flex-shrink: 0;
}

.seller-name-header {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.image-section {
  background-color: #fff;
  margin-bottom: 20rpx;
}

.goods-info {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.price-section {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.price {
  font-size: 48rpx;
  font-weight: bold;
  color: #ff4444;
  margin-right: 20rpx;
}

.group-buy-tag {
  background-color: #ffeb3b;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #333;
}

.description {
  font-size: 32rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 20rpx;
}

.meta-info {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  font-size: 28rpx;
  color: #999;
}

.meta-item {
  display: flex;
  align-items: center;
}

.meta-info .label {
  margin-right: 10rpx;
}

.sales-value {
  color: #ff6600;
  font-weight: 500;
}


/* 底部操作栏 */
.bottom-action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
  border-top: 1rpx solid #f0f0f0;
}

/* 功能图标区域 */
.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100rpx;
  padding: 0 15rpx;
  position: relative;
}

.action-item:not(:last-child)::after {
  content: '';
  position: absolute;
  right: 0;
  top: 20%;
  bottom: 20%;
  width: 1rpx;
  background-color: #f0f0f0;
}

.action-icon {
  width: 48rpx;
  height: 48rpx;
}

.action-count {
  font-size: 20rpx;
  color: #999;
  margin-top: 4rpx;
}

/* 聊一聊按钮 */
.chat-btn {
  padding: 20rpx 30rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  margin: 0 15rpx;
  flex-shrink: 0;
}

.chat-text {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

/* 购买按钮区域 */
.buy-buttons {
  flex: 1;
  display: flex;
  align-items: stretch;
  gap: 10rpx;
  padding: 0 10rpx;
}

.buy-buttons-group {
  flex: 1;
  display: flex;
  align-items: stretch;
  gap: 10rpx;
}

.buy-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 16rpx 8rpx;
  border-radius: 8rpx;
  min-width: 0;
}

.buy-btn.gray-btn {
  background-color: #f5f5f5;
  color: #333;
}

.buy-btn.yellow-btn {
  background-color: #ffd700;
  color: #000;
}

.buy-price {
  font-size: 26rpx;
  font-weight: bold;
  line-height: 1.2;
}

.buy-label {
  font-size: 22rpx;
  margin-top: 4rpx;
}



