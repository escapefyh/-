/* pages/order/order.wxss */
.order-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 40rpx;
}

/* 状态筛选栏 */
.status-tabs {
  display: flex;
  background-color: #ffffff;
  border-bottom: 1rpx solid #e5e5e5;
  position: sticky;
  top: 0;
  z-index: 100;
}

.status-tab {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.status-tab-active {
  color: #1296db;
  font-weight: 500;
}

.status-tab-active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background-color: #1296db;
  border-radius: 2rpx;
}

/* 加载中状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 60vh;
  font-size: 32rpx;
  color: #999;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 60vh;
  padding: 40rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.empty-tip {
  font-size: 28rpx;
  color: #ccc;
}

/* 订单列表 */
.order-list {
  padding: 20rpx;
}

.order-item {
  background-color: #ffffff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

/* 订单头部 */
.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 20rpx;
}

.order-no {
  font-size: 26rpx;
  color: #666;
}

.order-status {
  font-size: 26rpx;
  font-weight: 500;
}

.order-status-pending {
  color: #ff6b35;
}

.order-status-paid {
  color: #1296db;
}

.order-status-shipped {
  color: #1296db;
}

.order-status-completed {
  color: #52c41a;
}

.order-status-cancelled {
  color: #999;
}

/* 订单内容 */
.order-content {
  display: flex;
  margin-bottom: 20rpx;
}

.order-goods-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  overflow: hidden;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.goods-image {
  width: 100%;
  height: 100%;
}

.order-goods-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goods-description {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  line-height: 1.5;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 12rpx;
}

.goods-spec {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.goods-quantity {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.goods-price {
  font-size: 32rpx;
  color: #ff6b35;
  font-weight: 600;
}

/* 订单底部 */
.order-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.order-time {
  font-size: 24rpx;
  color: #999;
}

.order-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  padding: 12rpx 32rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  text-align: center;
  min-width: 120rpx;
}

.action-btn-primary {
  background-color: #1296db;
  color: #ffffff;
}

.action-btn-primary:active {
  background-color: #0d7bb8;
}

.action-btn-secondary {
  background-color: #f5f5f5;
  color: #666;
  border: 1rpx solid #e5e5e5;
}

.action-btn-secondary:active {
  background-color: #e5e5e5;
}

/* 加载更多提示 */
.loading-more {
  text-align: center;
  padding: 40rpx 0;
  font-size: 28rpx;
  color: #999;
}

.no-more {
  text-align: center;
  padding: 40rpx 0;
  font-size: 28rpx;
  color: #ccc;
}
