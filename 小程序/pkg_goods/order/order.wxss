/* pages/order/order.wxss */
.order-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 40rpx;
}

/* 状态筛选栏 */
.status-tabs {
  display: flex;
  background-color: #ffffff;
  border-bottom: 1rpx solid #e5e5e5;
  position: sticky;
  top: 0;
  z-index: 100;
}

.status-tab {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.status-tab-active {
  color: #1296db;
  font-weight: 500;
}

.status-tab-active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background-color: #1296db;
  border-radius: 2rpx;
}

/* 加载中状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 60vh;
  font-size: 32rpx;
  color: #999;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 60vh;
  padding: 40rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.empty-tip {
  font-size: 28rpx;
  color: #ccc;
}

/* 订单列表 */
.order-list {
  padding: 20rpx;
}

.order-item {
  background-color: #ffffff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

/* 订单头部 */
.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 20rpx;
}

.order-no {
  font-size: 26rpx;
  color: #666;
}

.order-status {
  font-size: 26rpx;
  font-weight: 500;
}

.order-status-pending {
  color: #ff6b35;
}

.order-status-paid {
  color: #1296db;
}

.order-status-shipped {
  color: #1296db;
}

.order-status-completed {
  color: #52c41a;
}

.order-status-cancelled {
  color: #999;
}

/* 订单内容 */
.order-content {
  display: flex;
  margin-bottom: 20rpx;
}

.order-goods-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  overflow: hidden;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.goods-image {
  width: 100%;
  height: 100%;
}

.order-goods-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goods-description {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  line-height: 1.5;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 12rpx;
}

.goods-spec {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.goods-quantity {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.goods-price {
  font-size: 32rpx;
  color: #ff6b35;
  font-weight: 600;
}

/* 订单底部 */
.order-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.order-time {
  font-size: 24rpx;
  color: #999;
}

.order-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  padding: 12rpx 32rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  text-align: center;
  min-width: 120rpx;
}

.action-btn-primary {
  background-color: #1296db;
  color: #ffffff;
}

.action-btn-primary:active {
  background-color: #0d7bb8;
}

.action-btn-secondary {
  background-color: #f5f5f5;
  color: #666;
  border: 1rpx solid #e5e5e5;
}

.action-btn-secondary:active {
  background-color: #e5e5e5;
}

.action-btn-disabled {
  background-color: #f5f5f5;
  color: #999;
  border: 1rpx solid #e5e5e5;
}

/* 加载更多提示 */
.loading-more {
  text-align: center;
  padding: 40rpx 0;
  font-size: 28rpx;
  color: #999;
}

.no-more {
  text-align: center;
  padding: 40rpx 0;
  font-size: 28rpx;
  color: #ccc;
}

/* 支付弹窗 */
.pay-modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: flex-end;
  justify-content: center;
  z-index: 2000;
}

.pay-modal-content {
  width: 100%;
  max-height: 70vh;
  background-color: #ffffff;
  border-radius: 32rpx 32rpx 0 0;
  display: flex;
  flex-direction: column;
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.pay-modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 30rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.pay-modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.pay-modal-close {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  color: #999;
  line-height: 1;
}

.pay-modal-close:active {
  color: #666;
}

.pay-modal-body {
  flex: 1;
  overflow-y: auto;
  padding: 40rpx 30rpx;
}

/* 支付方式 */
.pay-method-section {
  margin-bottom: 40rpx;
}

.pay-method-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background-color: #f5f5f5;
  border: 2rpx solid #e0e0e0;
  border-radius: 16rpx;
  position: relative;
}

.pay-method-active {
  background-color: #e8f5e9;
  border-color: #4caf50;
}

.pay-method-icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}

.pay-method-name {
  flex: 1;
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.pay-method-check {
  font-size: 32rpx;
  color: #4caf50;
  font-weight: bold;
}

/* 支付金额 */
.pay-amount-section {
  text-align: center;
  padding: 40rpx 0;
  margin-bottom: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.pay-amount-label {
  display: block;
  font-size: 28rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.pay-amount-value {
  font-size: 64rpx;
  font-weight: bold;
  color: #ff4444;
}

/* 余额信息 */
.balance-info-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  font-size: 28rpx;
}

.balance-label {
  color: #666;
}

.balance-value {
  color: #333;
  font-weight: 500;
}

/* 余额不足提示 */
.balance-warning {
  margin-top: 20rpx;
  padding: 20rpx;
  background-color: #fff3cd;
  border-radius: 12rpx;
  text-align: center;
  font-size: 26rpx;
  color: #856404;
}

/* 支付弹窗底部 */
.pay-modal-footer {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background-color: #fff;
  border-top: 1rpx solid #f0f0f0;
  gap: 20rpx;
}

.pay-total {
  flex: 1;
  display: flex;
  align-items: baseline;
  gap: 10rpx;
}

.pay-total-label {
  font-size: 28rpx;
  color: #666;
}

.pay-total-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #ff4444;
}

.pay-confirm-btn {
  padding: 24rpx 60rpx;
  background-color: #07c160;
  border-radius: 50rpx;
  flex-shrink: 0;
}

.pay-confirm-btn-disabled {
  background-color: #ccc;
}

.pay-confirm-btn-text {
  font-size: 32rpx;
  color: #fff;
  font-weight: bold;
}
