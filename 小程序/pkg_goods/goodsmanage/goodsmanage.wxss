/* pages/goodsmanage/goodsmanage.wxss */
.goodsmanage-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
}

.loading-container,
.empty-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 60vh;
  font-size: 32rpx;
  color: #999;
}

.empty-tip {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #ccc;
}

.goods-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.goods-item {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  display: flex;
  gap: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.goods-image-wrapper {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  overflow: hidden;
  background-color: #f0f0f0;
  flex-shrink: 0;
}

.goods-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.goods-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-width: 0;
}

.goods-description {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 10rpx;
}

.goods-price {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff4444;
  margin-bottom: 10rpx;
}


.goods-actions {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  justify-content: center;
  flex-shrink: 0;
}

.action-btn {
  padding: 12rpx 24rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  text-align: center;
  min-width: 100rpx;
}

.edit-btn {
  background-color: #1296db;
  color: #fff;
}

.delete-btn {
  background-color: #ff4444;
  color: #fff;
}

.loading-more,
.no-more {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx 0;
  font-size: 28rpx;
  color: #999;
}

/* 编辑弹窗样式 */
.edit-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.edit-modal-content {
  width: 80%;
  max-width: 600rpx;
  background-color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
}

.edit-modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.edit-modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.edit-modal-close {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  color: #999;
  line-height: 1;
}

.edit-modal-body {
  padding: 30rpx;
}

.edit-form-item {
  margin-bottom: 30rpx;
}

.edit-form-item:last-child {
  margin-bottom: 0;
}

.edit-label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.edit-value {
  display: block;
  font-size: 32rpx;
  color: #333;
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
}

.edit-input {
  width: 100%;
  padding: 20rpx;
  font-size: 32rpx;
  color: #333;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  box-sizing: border-box;
}

.edit-modal-footer {
  display: flex;
  border-top: 1rpx solid #f0f0f0;
}

.edit-btn-cancel,
.edit-btn-confirm {
  flex: 1;
  padding: 30rpx;
  text-align: center;
  font-size: 32rpx;
}

.edit-btn-cancel {
  color: #666;
  border-right: 1rpx solid #f0f0f0;
}

.edit-btn-confirm {
  color: #1296db;
  font-weight: bold;
}





