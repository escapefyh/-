/* pkg_goods/paysuccess/paysuccess.wxss */
.pay-success-page {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 40rpx 60rpx;
}

/* 成功内容区域 */
.success-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
}

.success-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
}

.success-title {
  font-size: 48rpx;
  font-weight: 600;
  color: #ffffff;
  margin-bottom: 20rpx;
}

.success-tip {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  text-align: center;
  line-height: 1.6;
  padding: 0 40rpx;
}

/* 订单信息区域 */
.order-info-section {
  width: 100%;
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 60rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #666;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.price-value {
  font-size: 32rpx;
  color: #ff4444;
  font-weight: 600;
}

/* 操作按钮区域 */
.action-buttons {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.action-btn {
  width: 100%;
  height: 96rpx;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 500;
}

.view-order-btn {
  background-color: #ffffff;
  color: #333;
  border: 2rpx solid #e0e0e0;
}

.continue-btn {
  background-color: #07c160;
  color: #ffffff;
}





