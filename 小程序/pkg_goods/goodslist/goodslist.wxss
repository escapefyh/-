/* pages/goodslist/goodslist.wxss */
.goods-list-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
}

/* 搜索区域 */
.search-section {
  margin-bottom: 20rpx;
}

.search-container {
  display: flex;
  align-items: center;
  gap: 20rpx;
  background-color: #fff;
  border-radius: 50rpx;
  padding: 10rpx 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.search-input-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 40rpx;
  padding: 10rpx 20rpx;
  position: relative;
}

.search-icon {
  font-size: 32rpx;
  margin-right: 10rpx;
  color: #999;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  background-color: transparent;
  border: none;
}

.search-clear {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: #999;
  margin-left: 10rpx;
}

.search-button {
  padding: 16rpx 32rpx;
  background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
  color: #000;
  font-size: 28rpx;
  font-weight: bold;
  border-radius: 40rpx;
  white-space: nowrap;
}

.loading-container,
.empty-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 60vh;
  font-size: 32rpx;
  color: #999;
}

/* 商品网格布局 */
.goods-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding-bottom: 40rpx;
}

/* 商品卡片 */
.goods-item {
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  display: flex;
  flex-direction: column;
}

/* 商品图片区域 */
.goods-image-wrapper {
  position: relative;
  width: 100%;
  padding-top: 100%; /* 保持1:1的宽高比 */
  overflow: hidden;
  background-color: #f0f0f0;
}

.goods-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 拼团标签 */
.group-buy-badge {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  background-color: #ffeb3b;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  font-size: 20rpx;
  color: #333;
  font-weight: 500;
}

/* 商品信息区域 */
.goods-info {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

/* 商品描述（最多两行） */
.goods-description {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  min-height: 84rpx; /* 两行文字的高度 */
}

/* 价格 */
.goods-price {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff4444;
  margin-top: 4rpx;
}

/* 发布者信息和销量 */
.goods-seller {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 4rpx;
}

.seller-name {
  font-size: 24rpx;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  flex: 1;
}

.sales-count {
  font-size: 24rpx;
  color: #ff6600;
  font-weight: 500;
  margin-left: 10rpx;
}

/* 加载更多提示 */
.loading-more,
.no-more {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx 0;
  font-size: 28rpx;
  color: #999;
}














