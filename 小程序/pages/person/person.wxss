.person-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 30rpx;
}

/* 用户信息区域（左上角） */
.user-header {
  margin-bottom: 30rpx;
}

.user-info {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background-color: #fff;
  border-radius: 20rpx;
}

.user-name-wrapper {
  margin-left: 30rpx;
  flex: 1;
}

.default-nikename {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.text1 {
  font-weight: bold;
  font-size: 36rpx;
  color: #333;
}

.text2 {
  font-size: 26rpx;
  color: #999;
}

.user-name {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
}

/* 卡片容器 */
.section-card {
  background-color: #fff;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
}

/* 菜单项 */
.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  transition: background-color 0.3s;
}

.menu-item:active {
  background-color: #f5f5f5;
}

.menu-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
  width: 50rpx;
  text-align: center;
}

.menu-text {
  flex: 1;
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.menu-arrow {
  font-size: 32rpx;
  color: #999;
}

/* 统计行（我的收藏、我的关注、历史浏览） */
.stats-row {
  display: flex;
  padding: 30rpx 0;
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20rpx 0;
}

.stat-number {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 28rpx;
  color: #666;
}

/* 我的交易区域 */
.section-title {
  padding: 30rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  border-bottom: 1rpx solid #f0f0f0;
}

.transaction-row {
  display: flex;
  padding: 30rpx 0;
}

.transaction-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20rpx 0;
}

.transaction-icon {
  font-size: 48rpx;
  margin-bottom: 10rpx;
}

.transaction-number {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.transaction-label {
  font-size: 28rpx;
  color: #666;
}
