<!--pages/person/person.wxml-->
<view class="person-page">
    <!-- 用户信息区域 -->
    <view class="info-show" bind:tap="getuserinfo">
      <t-image src="{{wxlogin ? userinfo.avatar :'/assets/default_avatar.png'}}" mode="aspectFill" width="200rpx" height="200rpx" shape="circle" />
      <view class="default-nikename" wx:if="{{!wxlogin}}">
        <view class="text1">微信授权</view> 
        <view class="text2">点击授权后同步您的微信数据</view>
      </view>
      <view wx:else>{{userinfo.nickname}}</view>
    </view>

    <!-- 功能菜单区域 -->
    <view class="menu-section">
      <view class="menu-item" bind:tap="goToCollect">
        <view class="menu-icon">☆</view>
        <view class="menu-text">我的收藏</view>
        <view class="menu-arrow">></view>
      </view>
      <view class="menu-item" bind:tap="goToOrder">
        <view class="menu-icon">📦</view>
        <view class="menu-text">我的订单</view>
        <view class="menu-arrow">></view>
      </view>
      <view class="menu-item" bind:tap="goToGoodsManage">
        <view class="menu-icon">📋</view>
        <view class="menu-text">商品管理</view>
        <view class="menu-arrow">></view>
      </view>
    </view>

    <!-- 退出登录按钮（固定在底部） -->
    <view class="bottom-section">
      <t-button theme="danger" class="quitbutton" bind:tap="toquit">退出登录</t-button>
    </view>
</view>