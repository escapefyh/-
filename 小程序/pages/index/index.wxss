/* pages/index/index.wxss */
.index-page {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 搜索框区域 */
.search-section {
  position: sticky;
  top: 0;
  z-index: 100;
  background-color: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

/* 搜索容器 */
.search-container {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

/* 搜索输入框包装器 */
.search-input-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 50rpx;
  padding: 0 30rpx;
  height: 80rpx;
  position: relative;
}

/* 搜索图标 */
.search-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
  color: #999;
}

/* 搜索输入框 */
.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  height: 100%;
}

/* 清除按钮 */
.search-clear {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
  background-color: #ddd;
  border-radius: 50%;
  font-size: 36rpx;
  color: #666;
  line-height: 1;
}

/* 搜索按钮 */
.search-button {
  padding: 0 30rpx;
  height: 80rpx;
  background-color: #0052d9;
  color: #fff;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 500;
  min-width: 120rpx;
}

/* 商品分类区域 */
.category-section {
  background-color: #fff;
  margin-bottom: 20rpx;
  padding: 30rpx 0 20rpx;
}

/* 分类swiper容器 */
.category-swiper {
  height: 220rpx;
}

.category-swiper-item {
  height: 100%;
  display: flex;
  align-items: center;
}

/* 分类网格布局 - 5列，占满整行 */
.category-grid {
  display: flex;
  width: 100%;
  height: 100%;
  padding: 0;
}

/* 分类项 - 平均分配宽度，占满整行 */
.category-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  cursor: pointer;
  min-width: 0; /* 允许flex子项收缩 */
}

.category-item:active {
  opacity: 0.7;
}

/* 分类图片容器 - 圆形 */
.category-image-wrapper {
  width: 110rpx;
  height: 110rpx;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f8f8f8;
  border-radius: 50%;
  overflow: hidden;
}

/* 分类图片 */
.category-image {
  width: 80%;
  height: 80%;
  object-fit: contain;
}

/* 分类名称 */
.category-name {
  font-size: 24rpx;
  color: #333;
  text-align: center;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 100%;
}

/* 商品区域 */
.goods-section {
  padding: 0 20rpx;
}

.loading-container,
.empty-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 60vh;
  font-size: 32rpx;
  color: #999;
}

/* 商品网格布局 */
.goods-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding-bottom: 40rpx;
}

/* 商品卡片 */
.goods-item {
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  display: flex;
  flex-direction: column;
}

/* 商品图片区域 */
.goods-image-wrapper {
  position: relative;
  width: 100%;
  padding-top: 100%; /* 保持1:1的宽高比 */
  overflow: hidden;
  background-color: #f0f0f0;
}

.goods-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 拼团标签 */
.group-buy-badge {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  background-color: #ffeb3b;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  font-size: 20rpx;
  color: #333;
  font-weight: 500;
}

/* 商品信息区域 */
.goods-info {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

/* 商品描述（最多两行） */
.goods-description {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  min-height: 84rpx; /* 两行文字的高度 */
}

/* 价格 */
.goods-price {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff4444;
  margin-top: 4rpx;
}

/* 发布者信息 */
.goods-seller {
  display: flex;
  align-items: center;
  margin-top: 4rpx;
}

.seller-name {
  font-size: 24rpx;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 加载更多提示 */
.loading-more,
.no-more {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx 0;
  font-size: 28rpx;
  color: #999;
}





