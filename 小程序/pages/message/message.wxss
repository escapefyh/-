/* pages/message/message.wxss */
.message-page {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 系统公告入口 */
.system-announcement-entry {
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 20rpx;
  margin-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.system-announcement-entry:active {
  background-color: #f8f8f8;
}

.entry-left {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.entry-icon {
  width: 88rpx;
  height: 88rpx;
  border-radius: 20rpx;
  background: linear-gradient(135deg, #409eff, #66b1ff);
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 34rpx;
  font-weight: 700;
}

.entry-text {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.entry-right {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.entry-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.entry-subtitle {
  font-size: 24rpx;
  color: #999;
}

.entry-arrow {
  color: #bbb;
  font-size: 30rpx;
}

.announcement-badge {
  min-width: 40rpx;
  padding: 4rpx 10rpx;
  border-radius: 20rpx;
  background-color: #ff4d4f;
  display: flex;
  align-items: center;
  justify-content: center;
}

.announcement-badge text {
  color: #fff;
  font-size: 22rpx;
}

.loading-container,
.empty-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 60vh;
  font-size: 28rpx;
  color: #999;
}

/* 聊天列表 */
.chat-list {
  background-color: #fff;
}

/* 聊天项 */
.chat-item {
  display: flex;
  align-items: center;
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.chat-item:active {
  background-color: #f8f8f8;
}

/* 头像 */
.chat-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  background-color: #f0f0f0;
}

/* 聊天信息 */
.chat-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-width: 0;
}

.chat-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.chat-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  flex: 1;
}

.chat-time {
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
}

.chat-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.chat-message {
  font-size: 28rpx;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  flex: 1;
}

/* 未读消息数 */
.unread-badge {
  min-width: 36rpx;
  height: 36rpx;
  background-color: #ff4444;
  border-radius: 18rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 12rpx;
  margin-left: 10rpx;
}

.unread-badge text {
  font-size: 20rpx;
  color: #fff;
  font-weight: 500;
}
