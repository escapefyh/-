/* pages/firelist/firelist.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 顶部氛围营造区 */
.header-section {
  position: relative;
  width: 100%;
  height: 200rpx;
  background: linear-gradient(to right, #FF2A2A, #FF7B00);
  padding: 40rpx 30rpx 30rpx;
  box-sizing: border-box;
  overflow: hidden;
}

.header-content {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  height: 100%;
  position: relative;
  z-index: 2;
}

/* 左侧标题区域 */
.header-left {
  flex: 1;
}

.main-title {
  font-size: 56rpx;
  font-weight: bold;
  color: #ffffff;
  font-style: italic;
  transform: rotate(-2deg);
  margin-bottom: 10rpx;
  text-shadow: 2rpx 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.sub-title {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 8rpx;
}

/* 右侧倒计时 */
.header-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.countdown-label {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 12rpx;
}

.countdown-box {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.countdown-item {
  width: 60rpx;
  height: 60rpx;
  background-color: #000000;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.3);
}

.countdown-separator {
  color: #ffffff;
  font-size: 32rpx;
  font-weight: bold;
  margin: 0 4rpx;
}

/* 列表容器（向上覆盖Header） */
.list-container {
  position: relative;
  margin-top: -30rpx;
  background-color: #ffffff;
  border-radius: 32rpx 32rpx 0 0;
  padding: 30rpx 20rpx 40rpx;
  min-height: calc(100vh - 170rpx);
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
}

/* 加载和空状态 */
.loading-container,
.empty-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 100rpx 0;
  color: #999999;
  font-size: 28rpx;
}

/* 商品列表 */
.goods-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 商品卡片 */
.goods-card {
  display: flex;
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 20rpx;
  height: 240rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.goods-card.top-three {
  border: 2rpx solid rgba(255, 215, 0, 0.3);
  box-shadow: 0 6rpx 20rpx rgba(255, 215, 0, 0.2);
}

/* 左侧图片区（35%宽度） */
.goods-image-wrapper {
  position: relative;
  width: 35%;
  height: 100%;
  margin-right: 20rpx;
}

.goods-image {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
  background-color: #f0f0f0;
}

/* 排名角标 */
.rank-badge {
  position: absolute;
  top: -8rpx;
  left: -8rpx;
  min-width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 0 0 20rpx 20rpx;
  z-index: 10;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
}

.rank-badge.rank-1 {
  background: linear-gradient(135deg, #FFD700, #FFA500);
  clip-path: polygon(0 0, 100% 0, 100% 80%, 50% 100%, 0 80%);
}

.rank-badge.rank-2 {
  background: linear-gradient(135deg, #C0C0C0, #808080);
  clip-path: polygon(0 0, 100% 0, 100% 80%, 50% 100%, 0 80%);
}

.rank-badge.rank-3 {
  background: linear-gradient(135deg, #CD7F32, #8B4513);
  clip-path: polygon(0 0, 100% 0, 100% 80%, 50% 100%, 0 80%);
}

.rank-badge.rank-other {
  background: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  width: 50rpx;
  height: 50rpx;
  min-width: 50rpx;
}

.rank-text {
  color: #ffffff;
  font-size: 28rpx;
  font-weight: bold;
  text-shadow: 1rpx 1rpx 2rpx rgba(0, 0, 0, 0.3);
}

/* 孤品角标 */
.stock-tag {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.7);
  padding: 8rpx 12rpx;
  border-radius: 0 0 16rpx 16rpx;
  text-align: center;
}

.stock-tag text {
  color: #ffffff;
  font-size: 22rpx;
  font-weight: bold;
}

/* 右侧信息区（65%宽度） */
.goods-info-wrapper {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 100%;
}

/* 商品标题 */
.goods-title {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
  line-height: 1.4;
  /* 单行显示，超出部分用省略号 */
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  /* 确保宽度不超过父容器 */
  width: 100%;
  max-width: 100%;
  margin-bottom: 16rpx;
}

/* 热度进度条区域 */
.heat-section {
  margin-bottom: 16rpx;
}

.heat-bar-wrapper {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.heat-bar-bg {
  width: 100%;
  height: 24rpx;
  background-color: #FFE4E1;
  border-radius: 12rpx;
  overflow: hidden;
  position: relative;
}

.heat-bar-fill {
  height: 100%;
  background: linear-gradient(to right, #FFD700, #FF6B6B);
  border-radius: 12rpx;
  transition: width 0.5s ease;
  box-shadow: 0 2rpx 8rpx rgba(255, 107, 107, 0.4);
}

.heat-text {
  font-size: 22rpx;
  color: #CC0000;
  font-weight: bold;
  align-self: flex-start;
}

/* 价格与按钮区域 */
.action-section {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

/* 价格 */
.price-wrapper {
  display: flex;
  align-items: baseline;
}

.price-symbol {
  font-size: 24rpx;
  color: #FF4444;
  font-weight: bold;
  margin-right: 4rpx;
}

.price-number {
  font-size: 40rpx;
  color: #FF4444;
  font-weight: bold;
}

/* 按钮 */
.action-button {
  padding: 16rpx 32rpx;
  background: linear-gradient(135deg, #FF4444, #FF7B00);
  border-radius: 50rpx;
  box-shadow: 0 4rpx 12rpx rgba(255, 68, 68, 0.3);
}

.action-button text {
  color: #ffffff;
  font-size: 26rpx;
  font-weight: bold;
}

/* 呼吸动画（前三名按钮） */
.action-button.pulse {
  animation: pulse 1s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.05);
  }
}

/* 加载更多 */
.loading-more,
.no-more {
  text-align: center;
  padding: 40rpx 0;
  color: #999999;
  font-size: 24rpx;
}
