/* pages/privacy/privacy.wxss */
.privacy-page {
  min-height: 100vh;
  background-color: #f5f5f5;
}

.container {
  padding: 40rpx 32rpx;
}

/* 标题区域 */
.header-section {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 30rpx;
}

.privacy-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 30rpx;
}

.privacy-date {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  font-size: 24rpx;
  color: #999;
  line-height: 1.6;
}

/* 内容区域 */
.content-section {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 30rpx;
  min-height: 400rpx;
}

.content-text {
  font-size: 30rpx;
  color: #666;
  line-height: 1.8;
  white-space: pre-wrap;
  word-break: break-all;
}

/* 联系方式 */
.contact-section {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 30rpx;
}

.content-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.contact-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 20rpx;
  font-size: 30rpx;
  line-height: 1.6;
}

.contact-item:last-child {
  margin-bottom: 0;
}

.contact-label {
  color: #333;
  font-weight: 500;
  min-width: 120rpx;
}

.contact-value {
  color: #666;
  flex: 1;
}







